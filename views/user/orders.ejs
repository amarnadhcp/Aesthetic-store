        <!-- Begin Page Content -->
        <main class="container my-5 ">
            <div class="row ">
                <div class="col ">
                    <h1 class="fw-bold">Orders</h1>
                    <hr>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <table class="table table-hover border rounded shadow" id="reloadDiv">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Date</th>
                                <th scope="col">Delivery Address</th>
                                <th scope="col">Total Amount</th>
                                <th scope="col">Payment type</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                                <!-- <th scope="col">Detail</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <% orderData.forEach((order, index)=> { %>
                                <tr>
                                    <th scope="row">
                                        <%= index + 1 %>
                                    </th>
                                    <td>
                                        <% order.product.forEach((product)=> { %>
                                            <p class="fw-normal mb-1">
                                                <%= product.productId.name %>
                                            </p>
                                            <% }) %>
                                    </td>
                                    <td>
                                        <%= order.date.toLocaleString('en-us', { day: '2-digit' , month: '2-digit' ,
                                            year: '2-digit' }) %>
                                    </td>
                                    <td>
                                        <%= order.deliveryAddress %>
                                    </td>
                                    <td>
                                        <%= order.total %>
                                    </td>
                                    <td>
                                        <%= order.payementType %>
                                    </td>
                                    <td>
                                        <%= order.status %>
                                    </td>



                                    <% if(order.status=="cancelled" || order.status=="Return pending" ||
                                        order.status=="Returned" || order.status=="processing" ||
                                        order.status=="Payment failed" ){ %>
                                        <!--nothing-->
                                        <% }else if (order.status=="delivered" ) { %>
                                            <td><button class="btn btn-outline-danger btn-sm fw-bold"
                                                    onclick="Returnorder('<%=order._id %>')">RETURN</button></td>
                                            <% }else{ %>
                                                <td><button class="btn btn-outline-danger btn-sm fw-bold"
                                                        onclick="Cancelorder('<%=order._id %>')">CANCEL</button></td>
                                                <%} %>


                                                    <!-- <td> <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-right-square-fill" viewBox="0 0 16 16">  <path d="M0 14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v12zm4.5-6.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5a.5.5 0 0 1 0-1z"/> </svg></td>  -->
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
        <!-- End Page Content -->

