<%- include('../layouts/admin/header.ejs') %>




    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('../layouts/admin/sidebar.ejs') %>

        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('../layouts/admin/navbar.ejs') %>



 
<br>
           <div>
              <a href="/admin/addcategory">
                   <button type="button" class="btn btn -xl btn-primary mb-3">ADD CATEGORY</button>
               </a>
           </div>
        
            
           
    
          <div class="card">
            <h5 class="card-header">CATEGORYS</h5>
            <div class="table-responsive text-nowrap">
              <table class="table">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Categoryname</th>
                    <th>Description</th>
                    <th>actions</th>
                  </tr>
                </thead>
               
                <tbody class="table-border-bottom-0">
                    
                  <%  categorydata.forEach((x,index)=>{%> 
                    
                    <tr>
                      <th scope="row"> <%= index+1 %> </th>
                      <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong> <%= x.category %> </strong></td>
                      <td><%= x.description %></td>
                      <td> 
                        <div class="dropdown">
                          <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                          </button>
                          <div class="dropdown-menu">
                            <a class="dropdown-item" href="/admin/category/editcategory/<%= x._id  %>"
                              ><i class="bx bx-edit-alt me-1"></i> Edit</a
                            >
                            <!-- <a class="dropdown-item" href="/admin/category/delete/<%= x._id  %>"
                              ><i class="bx bx-trash me-1"></i> Delete</a
                            > -->
                          </div>
                        </div>
                      </td>
                    </tr> 

                    <% }); %>
                
                </tbody>
              </table>
            </div>
          </div>

          <div>
            <% if(typeof message!=="undefined"){%>
              <h1 style ="font-size:16px;color:rgb(73, 34, 227);"><%=message %></h1>
              <%}%>
          </div>


    <%- include('../layouts/admin/footer.ejs') %>