<%- include('../layouts/admin/header.ejs') %>

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <%- include('../layouts/admin/sidebar.ejs') %>

                <!-- / Menu -->

                <!-- Layout container -->
                <div class="layout-page">
                    <!-- Navbar -->

                    <%- include('../layouts/admin/navbar.ejs') %>

                        <br>

                        <div class="col-xxl">
                            <div class="card mb-4">
                                <div class="card-header d-flex align-items-center justify-content-between">
                                    <h5 class="mb-0">New Coupon</h5>
                                    <small class="text-muted float-end">Input new coupon details</small>
                                </div>
                                <div class="card-body">
                            <form action="" method="post" >

                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label" for="basic-default-name">coupon
                                                code</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="basic-default-name"
                                                    name="code" />
                                            </div>
                                        </div>


                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label"
                                                for="basic-default-name">Minumum parchase amount</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" id="basic-default-name"
                                                    name="minPurchaseAmount" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label"
                                                for="basic-default-name">max discount</label>
                                            <div class="col-sm-10">
                                                <input type="number" min="1" class="form-control"
                                                    id="basic-default-name" name="maxdiscount" />
                                            </div>
                                        </div>


                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label"
                                                for="basic-default-name">percentage</label>
                                            <div class="col-sm-10">
                                                <input type="number" min="1" class="form-control"
                                                    id="basic-default-name" name="percentage" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label"
                                                for="basic-default-name">expirydate</label>
                                            <div class="col-sm-10">
                                                <input type="date" min="1" class="form-control" id="basic-default-name"
                                                    name="expirydate" />
                                            </div>
                                        </div>


                                        <div class="row justify-content-end">

                                            <% if(typeof message!=="undefined" ){%>
                                                <h1 style="font-size:16px;color:rgb(73, 34, 227);">
                                                    <%=message %>
                                                </h1>
                                                <%}%>


                                    <div class="col-sm-10">

                                        <button type="submit" class="btn btn-primary">Submit</button>

                                    </div>

                                      </div>
                          </form>
                                </div>
                            </div>
                        </div>


                        <%- include('../layouts/admin/footer.ejs') %>