        <%  userDatas.forEach((x,index)=>{%> 

            <tr>

                <td><%= index+1 %></td>
                <td><%= x.username %></td>
                <td><%= x.email %></td>
                <td><%= x.mobilenumber %></td>
    <!-- /////////////status showing//////////////////////////// -->
                <% if(x.status){ %>
                  <td><span class="badge bg-success">Active</span></td>
                <% }else{ %>
                  <td><span class="badge bg-danger">DeActive</span></td>
                <% } %>


<!-- /////////////  Active and dective button //////////////////////////// -->

                  <% if(x.status){%>
                    <% console.log(x.status); %>

                    
                <td>                       
                    <button type="button" class="btn btn-danger" ><a  class="text-white" href="/admin/useractive/<%=x._id%>">Block</a></button>               
               </td> 
                  <% }else{ %>

               <td>  
                    <button type="button" class="btn btn-success" ><a  class="text-white" href="/admin/useractive/<%=x._id%>">UnBlock</a></button>
               </td> 
                    <% }%>

            </tr>
          
        <% }); %>
      

