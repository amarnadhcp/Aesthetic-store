
<%- include('../layouts/admin/header.ejs') %>

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('../layouts/admin/sidebar.ejs') %>

        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('../layouts/admin/navbar.ejs') %>

          <br>

          <div class="col-xxl">
            <div class="card mb-4">
              <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">New Product</h5>
                <small class="text-muted float-end">Iput new product</small>
              </div>
              <div class="card-body">
                <form action="" method="post" enctype="multipart/form-data">

                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Product name</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="basic-default-name"  name="form_product"/>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Category</label>
                    <div class="col-sm-10">
                      <select name="form_category" class="form-control form-control-line">
                        <option selected>Select the category</option>
                        
    

                        <% categorydata.forEach(x=> { %>
                          <option value="<%= x._id %>">
                            <%= x.category %>
                          </option>
                          <% }); %>
    
                      </select>
                    </div>
                  </div>
                  

                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Description</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="basic-default-name"  name="form_description"/>
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Stock</label>
                    <div class="col-sm-10">
                      <input type="number"  min="1"  class="form-control" id="basic-default-name"  name="form_stock"/>
                    </div>
                  </div>

                  
                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">price</label>
                    <div class="col-sm-10">
                      <input type="number" min="1"  class="form-control" id="basic-default-name"  name="form_price"/>
                    </div>
                  </div>

                    
                  <!-- <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">status</label>
                    <div class="col-sm-10">
                      <input type="text"  class="form-control" id="basic-default-name"  name="form_status"/>
                    </div>
                  </div> -->

                  
                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">image</label>
                    <div class="col-sm-10">
                      <input multiple type="file"   class="form-control" id="basic-default-name"  name="image"/>
                    </div>
                  </div>


                  <div class="row justify-content-end">
              
                    
                    <% if(typeof message!=="undefined"){%>
                      <h1 style ="font-size:16px;color:rgb(73, 34, 227);"><%=message %></h1>
                      <%}%>

                    <div class="col-sm-10">
                  
                   <button type="submit" class="btn btn-primary">Submit</button>
          
                    </div>

                  </div>
                </form>
              </div>
            </div>
          </div>
      
       
    <%- include('../layouts/admin/footer.ejs') %>