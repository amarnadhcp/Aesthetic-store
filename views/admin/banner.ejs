<%- include('../layouts/admin/header.ejs') %>


  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <!-- Menu -->
      <%- include('../layouts/admin/sidebar.ejs') %>

        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('../layouts/admin/navbar.ejs') %>

            <br>
            <br>

            <br>
            <div>
              <a href="/admin/banner/addbanner">
                <button type="button" class="btn btn -xl btn-primary mb-3">ADD BANNER</button>
              </a>
            </div>


            <div class="card">
              <h5 class="card-header">All Banners</h5>
              <div class="table-responsive text-nowrap">
                <table class="table">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Description</th>
                      <th>image</th>
                      <th></th>
                      <th>Action</th>


                    </tr>
                  </thead>

                  <tbody class="table-border-bottom-0">


                    <% bannerdata.forEach((x,index)=>{%>



                      <tr>
                        <th scope="row">
                          <%= index+1 %>
                        </th>

                        <th scope="row">
                          <%=x.description %>
                        </th>


                        <td> <img src="/productImages/<%= x.bannerimg %>" alt="" style="width: 90px; height: 50px;">
                        </td>



                        <td>


                        <td>
                          <button type="button" class="btn btn-danger"><a class="text-white"
                              href="/admin/deletebanner/<%=x._id%>">delete</a></button>
                        </td>


                        <% }) %>



                          </td>
                      </tr>



                  </tbody>
                </table>
              </div>
            </div>

            <div>
              <% if(typeof message!=="undefined" ){%>
                <h1 style="font-size:16px;color:rgb(73, 34, 227);">
                  <%=message %>
                </h1>
                           <%}%>
            </div>


            <%- include('../layouts/admin/footer.ejs') %>